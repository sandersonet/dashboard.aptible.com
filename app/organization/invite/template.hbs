{{partial 'organization/members-header'}}
<div class="layout-container">
  <div class="row">
    <div class="col-xs-6">
      {{server-validation-errors model=model}}

      {{#if model.errors.length}}
        {{#bs-alert alert='danger' as |component|}}
          {{bs-alert-dismiss target=component}}
          <p>
            There was an error sending this invitation.
          </p>
          <ul>
            {{#each model.errors.messages as |message|}}
            <li>{{message}}</li>
            {{/each}}
          </ul>
        {{/bs-alert}}
      {{/if}}

      <div class="panel">
        <div class="panel-heading">
          <h3>Invite to {{organization.name}}</h3>
        </div>

        <div class="panel-body">
          <form role='form' {{action 'invite' on='submit'}}>
            <div class="form-group">
              <label for="email">Email</label>
              {{focusable-input name="email"
                                value=model.email
                                autofocus=true
                                class="form-control"}}
            </div>

            <div class="">
              <label for="role">Role</label>
              {{object-select
                name="role"
                items=organization.roles
                selected=model.role
                update=(action (mut model.role))
              }}
            </div>
          </form>
        </div>
      </div>

      <div class="resource-actions">
        <button {{action 'cancel'}} class='btn btn-default' type='reset'>
          Cancel
        </button>
        <button {{action 'invite'}}
                disabled={{isDisabled}}
                class='btn btn-primary' type='submit'>
          {{#if model.isSaving}}
            <i class='fa fa-spin fa-spinner'></i> Sending...
          {{else}}
            Send Invitation
          {{/if}}
        </button>
      </div>
    </div>
  </div>
</div>
