<div class="row">
  <div class="col-xs-9">
    <div class="panel panel-default panel-danger">
      <div class="panel-heading">
        <h3>Permanently deprovision {{model.handle}} </h3>
      </div>
      <div class="panel-body">
        <form role="form">
          {{#if error}}
            <div class="alert alert-warning fade in">
              <a class="close" data-dismiss="alert">Ã—</a>
              <p>
                There was a problem deprovisioning your database: {{error.responseJSON.message}}
              </p>
            </div>
          {{/if}}

          {{#if model.dependents}}
          <p>
            These other databases depend on {{model.handle}}, you must delete them first:
          </p>
          <p>
            {{partial 'database/replicas'}}
          </p>
          {{else}}
          <p>
            This action CANNOT be undone. This will permanently deprovision
            <strong>{{model.handle}}</strong>.
          </p>

          <div class="form-group">
            <label>Type the name of the database to permanently deprovision.</label>

            {{#button-with-confirmation confirmValue=model.handle action='deprovision'}}
              Deprovision Permanently
            {{/button-with-confirmation}}
          </div>
          {{/if}}
        </form>

      </div>
    </div>
  </div>
</div>
