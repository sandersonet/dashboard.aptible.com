<div class="panel white-panel">
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="gravatar-col sm"></th>
        <th>Name</th>
        <th>Email</th>
        <th>
          {{properties.isDeveloper.title}}
          {{more-info-icon
            title=properties.isDeveloper.title
            body=properties.isDeveloper.description}}
        </th>

        <th>
          {{properties.isSecurityOfficer.title}}
          {{more-info-icon
            title=properties.isSecurityOfficer.title
            body=properties.isSecurityOfficer.description}}
        </th>

        <th>
          {{properties.isRobot.title}}
          {{more-info-icon
            title=properties.isRobot.title
            body=properties.isRobot.description}}
        </th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      {{#each teamMembers as |teamMemberDocument|}}
        {{edit-team-member
          document=teamMemberDocument
          properties=properties
          resendInvitation=(action this.attrs.resendInvitation)
          removeInvitation=(action this.attrs.removeInvitation)}}
      {{/each}}
    </tbody>
  </table>
</div>
